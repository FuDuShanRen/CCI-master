<?xml version="1.0" encoding="utf-8"?>



<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerlayout_home"
    tools:context=".activity_fragment.MainActivity">



    <android.support.design.widget.NavigationView
        android:background="@color/bg_light_gray"
        android:id="@+id/navigation_view"
        app:itemTextColor="@color/theme_brown_tablayout_text_colorlist"
        android:layout_gravity="left"
        app:itemIconTint="@color/theme_redbase_nav_menu_icon_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.design.widget.NavigationView>

    <include layout="@layout/layout_main_content"/>

</android.support.v4.widget.DrawerLayout>



















